-- pour montrer les database: show databases;

select user, host, plugin, password from mysql.user; --affichage des user / host / plugin et password
-- administateur
create or replace user "admin"@"%" identified by "pwd";
grant all on *.* to "admin"@"%" with grant option;

--alice

create or replace user "alice"@"%" identified by "pwda";
create database if not exists a;
grant all on a.* to "alice"@"%";

--bob l'Ã©colier

